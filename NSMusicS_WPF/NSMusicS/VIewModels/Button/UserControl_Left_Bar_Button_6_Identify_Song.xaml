<UserControl x:Class="NSMusicS_For_WPF.VIewModels.Button.UserControl_Left_Bar_Button_6_Identify_Song"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NSMusicS_For_WPF.VIewModels.Button"
             mc:Ignorable="d" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             Height="33" Width="150" Background="#01FFFFFF">
    <Grid>
        <Border 
             x:Name="BackGround_Button" CornerRadius="10">
            <Grid>
                <Button 
                    Style="{StaticResource MyButton}"
                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Width="16" Height="16" Margin="15,0,0,0">
                    <svgc:SvgViewbox 
                        x:Name="SvgViewbox_Button" Cursor="Hand"/>
                </Button>
                <TextBlock 
                    x:Name="Text_Button"
                    Text="听歌识曲" Foreground="#646B7C" FontSize="13"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
