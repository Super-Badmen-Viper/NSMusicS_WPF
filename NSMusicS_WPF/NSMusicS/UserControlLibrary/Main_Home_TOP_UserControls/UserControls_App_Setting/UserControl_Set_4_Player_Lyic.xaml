            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Height="30" Margin="0,60,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock 
                    Text="歌词跳跃动画" 
                    Foreground="#44FFFFFF" FontSize="14" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Margin="8,0,0,0" />
                
            </StackPanel>
        </Border>
        <Border 
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Width="260" Height="30" Margin="0,100,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock 
                    Text="桌面歌词覆盖任务栏" 
                    Foreground="#44FFFFFF" FontSize="14" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Margin="8,0,0,0" />

            </StackPanel>
        </Border>

        <Border BorderBrush="#44FFFFFF" BorderThickness="0,0,0,1" VerticalAlignment="Top" Margin="0,480,200,0"/>
    </Grid>
</UserControl>
