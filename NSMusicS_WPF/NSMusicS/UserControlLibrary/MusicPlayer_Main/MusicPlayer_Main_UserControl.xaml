                <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="2"/>
                <LinearDoubleKeyFrame KeyTime="00:00:0.4" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
